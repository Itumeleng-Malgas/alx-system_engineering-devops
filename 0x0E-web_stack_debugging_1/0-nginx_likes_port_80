#!/usr/bin/env bash
# find out whatâ€™s keeping Nginx installation from listening on port 80

# Check if Nginx is installed
if ! command -v nginx &> /dev/null; then
    echo "Nginx is not installed. Installing..."
    sudo apt-get update
    sudo apt-get install -y nginx
fi

# Enable the nginx management via the init script
sudo sed -i 's|ENABLED=0|ENABLED=1|' /etc/default/nginx

# Check if Nginx is running on port 80
sudo service nginx start
